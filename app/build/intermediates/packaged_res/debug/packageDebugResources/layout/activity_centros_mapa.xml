<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:title="@string/centros_y_farmacias"
            android:titleTextColor="?attr/colorOnPrimary"
            app:menu="@menu/menu_centros_mapa"
            app:navigationIcon="@drawable/atras"
            app:navigationIconTint="@null" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPanelFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipsFiltro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHospitales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Hospitales / Centros"
                        app:chipIcon="@drawable/cruz_roja"
                        app:chipIconVisible="true"
                        app:chipIconTint="@null" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFarmacias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmacias"
                        app:chipIcon="@drawable/cruz_verde"
                        app:chipIconVisible="true"
                        app:chipIconTint="@null" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFavoritos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favoritos"
                        app:chipIcon="@drawable/favoritos"
                        app:chipIconVisible="true"
                        app:chipIconTint="@null" />
                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonGuardarCentro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:enabled="false"
                    android:text="Guardar selección como mi centro"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFavorito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:enabled="false"
                    android:text="Añadir a favoritos"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMiUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="@string/ir_a_mi_ubicacion"
            app:srcCompat="@drawable/mi_ubicacion"
            app:tint="@null" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
